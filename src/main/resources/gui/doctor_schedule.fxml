<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.clinicmanager.gui.DoctorScheduleController">
    <top>
        <Label text="My schedule" style="-fx-font-size: 16; -fx-padding: 10;" />
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <TableView fx:id="slotsTable" prefHeight="250">
                <columns>
                    <TableColumn text="Date" fx:id="dateCol" />
                    <TableColumn text="Start time" fx:id="startCol" />
                    <TableColumn text="End time" fx:id="endCol" />
                    <TableColumn text="Status" fx:id="statusCol" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <Button text="Add slot" fx:id="addSlotBtn" />
            <Button text="Remove slot" fx:id="removeSlotBtn" />
            <Button text="Close slot" fx:id="closeSlotBtn" />
            <Button text="Open slot" fx:id="openSlotBtn" />
            <Button text="Refresh" fx:id="refreshBtn" />
            <Button text="Close window" fx:id="closeBtn" />
        </HBox>
    </bottom>
</BorderPane>

