<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinicmanager.gui.StartMenuController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="englishButton" text="EN" onAction="#switchToEnglish"
                    style="-fx-background-color: transparent; -fx-border-width: 0; -fx-text-fill: #2c3e50;"/>
            <Button fx:id="russianButton" text="RU" onAction="#switchToRussian"
                    style="-fx-background-color: transparent; -fx-border-width: 0; -fx-text-fill: #2c3e50;"/>
            <Button fx:id="polishButton" text="PL" onAction="#switchToPolish"
                    style="-fx-background-color: transparent; -fx-border-width: 0; -fx-text-fill: #2c3e50;"/>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30">
            <Label fx:id="titleLabel" style="-fx-font-size: 20;"/>
            <Button fx:id="loginButton" onAction="#handleLogin"/>
            <Button fx:id="registerButton" onAction="#handleRegister"/>
        </VBox>
    </center>
</BorderPane>