<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.clinicmanager.gui.DoctorAppointmentsController">
    <top>
        <Label text="My appointments" style="-fx-font-size: 16; -fx-padding: 10;" />
    </top>
    <center>
        <TableView fx:id="appointmentsTable" prefHeight="250">
            <columns>
                <TableColumn text="Patient" fx:id="patientCol" />
                <TableColumn text="Date" fx:id="dateCol" />
                <TableColumn text="Time" fx:id="timeCol" />
                <TableColumn text="Status" fx:id="statusCol" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <Button text="Show appointment details" fx:id="viewDetailsBtn" />
            <Button text="Open patient card" fx:id="openCardBtn" />
            <Button text="Patient details" fx:id="patientInfoBtn" />
            <Button text="Add record to card" fx:id="addRecordBtn" />
            <Button text="End appointment" fx:id="endAppointmentBtn" />
            <Button text="Close window" fx:id="closeBtn" />
        </HBox>
    </bottom>
</BorderPane>

