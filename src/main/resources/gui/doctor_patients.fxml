<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.clinicmanager.gui.DoctorPatientsController">
    <top>
        <Label text="My patients" style="-fx-font-size: 16; -fx-padding: 10;" />
    </top>
    <center>
        <TableView fx:id="patientsTable" prefHeight="250">
            <columns>
                <TableColumn text="Name" fx:id="nameCol" />
                <TableColumn text="Date of birth" fx:id="dobCol" />
                <TableColumn text="Phone" fx:id="phoneCol" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <Button text="Show medical card" fx:id="viewCardBtn" />
            <Button text="Patient details" fx:id="patientInfoBtn" />
            <Button text="Close window" fx:id="closeBtn" />
        </HBox>
    </bottom>
</BorderPane>

