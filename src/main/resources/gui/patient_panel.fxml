<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinicmanager.gui.PatientPanelController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="englishButton" text="EN" onAction="#switchToEnglish"
                    style="-fx-background-color: transparent; -fx-border-width: 0; -fx-text-fill: #2c3e50;"/>
            <Button fx:id="russianButton" text="RU" onAction="#switchToRussian"
                    style="-fx-background-color: transparent; -fx-border-width: 0; -fx-text-fill: #2c3e50;"/>
            <Button fx:id="polishButton" text="PL" onAction="#switchToPolish"
                    style="-fx-background-color: transparent; -fx-border-width: 0; -fx-text-fill: #2c3e50;"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20">
            <HBox spacing="10" alignment="CENTER">
                <Label fx:id="systemTimeLabel" />
                <Label fx:id="virtualTimeLabel" style="-fx-font-weight: bold;" />
                <Button fx:id="startTimeBtn" />
                <Button fx:id="stopTimeBtn" />
                <Button fx:id="setTimeBtn" />
            </HBox>

            <Label fx:id="panelTitle" style="-fx-font-size: 18"/>

            <Button fx:id="searchDoctorsBtn"/>
            <Button fx:id="viewAppointmentsBtn"/>
            <Button fx:id="viewMedicalCardBtn"/>
            <Button fx:id="notificationsBtn" style="-fx-background-color: #cccccc;"/>
            <Button fx:id="favoriteDoctorsBtn"/>
            <Button fx:id="logoutBtn"/>
        </VBox>
    </center>
</BorderPane>