<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.clinicmanager.gui.PatientAppointmentsController">
    <top>
        <Label fx:id="infoLabel" text="Ваши активные записи:" style="-fx-padding: 10;" />
    </top>
    <center>
        <ListView fx:id="appointmentsListView" prefHeight="300" prefWidth="500" />
    </center>
    <bottom>
        <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <Button fx:id="cancelBtn" text="Отменить" disable="true" />
            <Button fx:id="rescheduleBtn" text="Перенести" disable="true" />
            <Button fx:id="confirmBtn" text="Подтвердить" disable="true" />
        </HBox>
    </bottom>
</BorderPane>

