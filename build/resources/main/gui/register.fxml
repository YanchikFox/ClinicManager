<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.clinicmanager.gui.RegisterController"
          hgap="10" vgap="10" style="-fx-padding: 20">

    <Label text="Роль:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="roleBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Пароль:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Имя:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Дата рождения:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="dobField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Телефон:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Лицензия (только для врача):" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="licenseField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Button text="Зарегистрироваться" onAction="#handleRegister"
            GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <Label fx:id="messageLabel" textFill="red"
           GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    <Button text="Назад" onAction="#handleBack"
            GridPane.rowIndex="9" GridPane.columnIndex="1"/>

</GridPane>
